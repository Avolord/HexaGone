<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HexaGone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home/index.css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:300i&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar smart_scroll fixed-top navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="#">
                <img src="~/images/placeholder_icon.png" width="30" height="30" class="d-inline-block align-top" alt="">
                HexaGone
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>

                <form class="form-inline ml-auto">
                    <button class="btn btn-outline-light" type="button" style="margin-right: 1em;">Login</button>
                </form>
                <span class="navbar-text" for="profile_image">
                    Guest
                </span>
                <img src="images/account.png" width="30" height="30" class="d-inline-block align-top" id="profile_image" alt="">
            </div>
        </nav>
        <img src="~/images/bg.jpg" width="100%" style="position: relative; top:0; left:0; min-height: 50%; z-index: -1">
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - HexaGone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/home/index.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

